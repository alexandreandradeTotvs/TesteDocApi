{
	"$schema": "https://raw.githubusercontent.com/alexandreandradeTotvs/TesteDocApi/master/budgetNegotiation_schema.json#",
	"info": {
		"description": "Contrato de Mensagem Padronizada para listagem de orçamentos dos produtos TOTVS",
		"version": "1.000",
		"title": "BudgetNegotiation",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "BudgetNegotiation",
				"description": "Dados das cotações por fornacedor",
				"segment": "BackOffice"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "TribeCP.Squad.ComprasFaturamento",
					"description": "Cotações por fornecedor"
				}
			]
		}
	},
	"definitions": {
		"PagedBlock": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/BudgetNegotiation"
							}
						}
					}
				}
			]
		},
		"BudgetNegotiation": {
			"description": "Descreve uma cotação por fornecedor",
			"properties": {
				"VendorCompanyId": {
					"description": "Código da Empresa do Fornecedor ",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Código da empresa",
							"field": "CODCOLCFO",
							"type": "integer"
						}
					]
				},
				"VendorCode": {
					"description": "Código do Fornecedor",
					"type": "string",
					"example": "001",
					"x-totvs": [
						{
							"product": "RM",
							"note": "Código do Fornecedor",
							"field": "CODCFO",
							"type": "string",
							"required": true,
							"available": true
						}
					]
				},
				"VendorName": {
					"description": "Nome Fantasia Fornecedor",
					"type": "string",
					"example": "TOTVS S.A",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Nome Fantasia",
							"field": "NOMEFANTASIA",
							"type": "string"
						}
					]
				},
				"InternalId": {
					"description": "InternalId dos orçamentos por fornecedor",
					"type": "string",
					"example": "1|001",
					"x-totvs": [
						{
							"product": "RM",
							"note": "TCORCAMENTO.CODCOLCFO | TCORCAMENTO.CODCFO",
							"required": true,
							"available": true
						}
					]
				},				
				"QuotationList": {
					"type": "array",					
					"description": "Lista de cotações do fornecedor",					
					"items": {
						"$ref": "#/definitions/QuotationItemType",
						"type": "object"
					}					
				},
				"QuotationItemType": {
					"type": "object",
					"properties": {
						"_expandables": {
							"type": "array",
							"description": "Expandable property/field list",
							"items": {
								"type": "string"
							}
						},
						"CompanyId": {
							"description": "Código da Empresa",
							"type": "string",
							"x-totvs": [								
								{
									"product": "RM",
									"field": "TCCOTACAO.CODCOLIGADA",
									"required": true,
									"type": "integer",									
									"note": "Código da coligada",
									"available": true
								}
							]
						},
						"QuotationCode": {
							"description": "Código da cotação",
							"type": "string",
							"x-totvs": [
								{
									"product": "RM",
									"field": "TCCOTACAO.CODCOTACAO",
									"required": true,
									"type": "string",									
									"note": "Código da cotação",
									"available": true
								}
							]
						},
						"QuotationDate": {
							"description": "Data da cotação",
							"type": "date",
							"x-totvs": [
								{
									"product": "RM",
									"field": "TCCOTACAO.DATCOTACAO",
									"required": true,
									"type": "date",									
									"note": "Data da cotacao",
									"available": true
								}
							]
						},
						"QuotationStatus": {
							"description": "Status da cotação",
							"type": "string",							
							"x-totvs": [
								{
									"product": "RM",
									"available": true,
									"required": true,
									"field": "TCCOTACAO.STSCOTACAO",
									"type": "string",									
									"note": "Status da cotação"
								}
							]
						},
						"DeadlineDate": {
							"description": "Data Limite de resposta da cotação",
							"type": "date",							
							"x-totvs": [
								{
									"product": "RM",
									"available": true,
									"required": true,
									"field": "TCCOTACAO.DATLIMRESPTA",
									"type": "date",									
									"note": "Status da cotação"
								}
							]
						},
						"DeliveryDate": {
							"description": "Data de Entrega",
							"type": "date",							
							"x-totvs": [
								{
									"product": "RM",
									"available": true,
									"required": true,
									"field": "TCCOTACAO.DATENTREGA",
									"type": "date",									
									"note": "Data de Entrega"
								}
							]
						},
						"BuyerCode": {
							"description": "Código do comprador",
							"type": "string",							
							"x-totvs": [
								{
									"product": "RM",
									"available": true,
									"required": true,
									"field": "TCCOTACAO.CODCOMPRADOR",
									"type": "string",									
									"note": "Código do comprador"
								}
							]
						}
					}					
				}
			}
		}
	}
}